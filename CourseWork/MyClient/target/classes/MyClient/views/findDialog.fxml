<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="100.0" prefWidth="300.0" stylesheets="@../styles/MyStyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MyClient.controllers.FindDialogController">
   <children>
      <GridPane layoutX="25.0" layoutY="20.0" prefHeight="30.0" prefWidth="250.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label prefHeight="30.0" prefWidth="120.0" text="Id to search:">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <TextField fx:id="idTextField" promptText="Enter an id here" GridPane.columnIndex="1">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
         </children>
      </GridPane>
      <Button fx:id="okButton" layoutX="92.0" layoutY="61.0" mnemonicParsing="false" onAction="#handleOk" text="Ok">
         <font>
            <Font size="14.0" />
         </font></Button>
      <Button fx:id="cancelButton" layoutX="150.0" layoutY="61.0" mnemonicParsing="false" onAction="#handleCancel" text="Cancel">
         <font>
            <Font size="14.0" />
         </font></Button>
   </children>
</AnchorPane>
