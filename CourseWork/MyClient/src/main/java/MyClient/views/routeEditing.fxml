<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="300.0" prefWidth="300.0" stylesheets="@../styles/MyStyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MyClient.controllers.RouteEditingController">
    <children>
        <GridPane layoutX="25.0" layoutY="50.0" prefHeight="200.0" prefWidth="250.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label prefHeight="30.0" prefWidth="100.0" text="Route Date">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label prefHeight="30.0" prefWidth="100.0" text="Departure Point" GridPane.rowIndex="1">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label prefHeight="30.0" prefWidth="100.0" text="Destination" GridPane.rowIndex="2">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label prefHeight="30.0" prefWidth="100.0" text="Departure Time" GridPane.rowIndex="3">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label prefHeight="30.0" prefWidth="100.0" text="Arrival Time" GridPane.rowIndex="4">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label prefHeight="30.0" prefWidth="100.0" text="Train Id" GridPane.rowIndex="5">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="routeDateField" GridPane.columnIndex="1" />
                <TextField fx:id="departurePointField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="destinationField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <TextField fx:id="departureTimeField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <TextField fx:id="arrivalTimeField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <TextField fx:id="trainIdField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            </children>
        </GridPane>
        <Label layoutX="125.0" layoutY="14.0" prefHeight="30.0" prefWidth="50.0" text="Route">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
        <Button fx:id="OkButton" layoutX="85.0" layoutY="255.0" mnemonicParsing="false" onAction="#handleOk" prefHeight="30.0" prefWidth="50.0" text="Ok">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
        <Button fx:id="cancelButton" layoutX="150.0" layoutY="255.0" mnemonicParsing="false" onAction="#handleCancel" text="Cancel">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
