<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../styles/MyStyle.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MyClient.controllers.TrainOverviewController">
    <children>
        <SplitPane dividerPositions="0.25" prefHeight="400.0" prefWidth="600.0">
            <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="150.0">
                    <children>
                        <TableView fx:id="trainTable" layoutY="0.0" prefHeight="400.0" prefWidth="150.0">
                            <columns>
                                <TableColumn fx:id="trainIdColumn" prefWidth="150.0" text="Train Id" />
                            </columns>
                        </TableView>
                    </children>
                </AnchorPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                    <children>
                        <Label layoutX="20.0" layoutY="14.0" prefHeight="25.0" prefWidth="145.0" text="Train details">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                        <GridPane layoutX="45.0" layoutY="50.0" prefHeight="270.0" prefWidth="330.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label prefHeight="35.0" prefWidth="170.0" text="Name">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                                <Label prefHeight="35.0" prefWidth="170.0" text="Type" GridPane.rowIndex="1">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                                <Label prefHeight="35.0" prefWidth="170.0" text="Number Of Places" GridPane.rowIndex="2">
                                    <font>
                                        <Font size="18.0" />
                                    </font>
                                </Label>
                                <Label fx:id="nameLabel" alignment="CENTER" prefHeight="35.0" prefWidth="170.0" text="Label" GridPane.columnIndex="1">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </Label>
                                <Label fx:id="typeLabel" alignment="CENTER" prefHeight="35.0" prefWidth="170.0" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </Label>
                                <Label fx:id="numberOfPlacesLabel" alignment="CENTER" prefHeight="35.0" prefWidth="170.0" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                    <font>
                                        <Font size="16.0" />
                                    </font>
                                </Label>
                            </children>
                        </GridPane>
                        <HBox layoutX="70.0" layoutY="335.0" prefHeight="30.0" prefWidth="320.0" spacing="15.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#handlePrev" prefHeight="30.0" prefWidth="50.0" text="Prev">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                                <Button mnemonicParsing="false" onAction="#handleNewTrain" text="New">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                                <Button mnemonicParsing="false" onAction="#handleEditTrain" prefHeight="30.0" prefWidth="50.0" text="Edit">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                                <Button mnemonicParsing="false" onAction="#handleDeleteTrain" text="Delete">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                                <Button mnemonicParsing="false" onAction="#handleNext" prefHeight="30.0" prefWidth="50.0" text="Next">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                        <Button layoutX="163.0" layoutY="13.0" mnemonicParsing="false" onAction="#handleFind" text="Find">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                    </children></AnchorPane>
            </items>
        </SplitPane>
    </children>
</AnchorPane>
